{
  "name"        : "Caveman",
  "paths":
  {
    "build"     : "build/",
    "src"       : "src/",
    "test"      : "test/"
  },
  "build"     :
  {
    "name"      : "caveman_#{{VERSION.MAJOR}}.#{{VERSION.MINOR}}.phar"
  },
  "dependencies":
  {
    "extensions"  : [
      "mbstring",
      "ctype"   ,
      "pcntl",
      "pcre",
      "phar",
      "openssl"
    ],
    "functions"   : [],
    "memory"      : "64MB"
  },
  "policies":
  {
    "ignore_stripe": [
      "Resources/pharheader.php.stub"
    ]
  }
}